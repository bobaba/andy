<p id="notice"><%= notice %></p>
<div class="container">
  <%= link_to 'Back', calendar_path, class: "btn btn-primary" %>
  <% if current_user %>
    <%= link_to 'Edit', edit_event_path(@event), class: "btn btn-warning" %>
    <%= link_to 'Remove Event', event_path(@event.id), method: :delete, class: "btn btn-danger", data: { confirm: "Are you sure you want to remove this event?"} %>
  <% end %>
</div>

<div class="container resourceBG">
    <div class="eventDisplay">
      <div class="event-header">
        <h2><%= @event.name %></h2>
        <p class="event-location">
          <%= @event.location %>
        </p>
        <p class="event-date">
          <%= @event.start_time.strftime('%b %d, %Y') %>
        </p>

      </div>
      <div class="timeDesc">
        <!-- time start and end -->
        <strong>Time:</strong> <%= @event.start_time.strftime('%l:%M%p') %> -
        <%= @event.end_time.strftime('%l:%M%p') %> <br>
        <%= @event.description.html_safe %>
      </div>

      <div id="map"></div>
    </div>

    <%= javascript_tag do %>
      latitude = '<%= j @event.latitude.to_s %>';
      longitude = '<%= j @event.longitude.to_s %>';
    <% end %>
</div>




<script>

function initMap() {
        var myLatlng = new google.maps.LatLng(latitude, longitude)
        var map = new google.maps.Map(document.getElementById('map'), {
          zoom: 10,
          center: myLatlng,
          scrollwheel: false
        });
        var marker = new google.maps.Marker({
          position: myLatlng,
          map: map
        });
      }
</script>

<script
src="https://maps.googleapis.com/maps/api/js?key=AIzaSyA2aJd8RurqTDufSYh9XmmqxVhMbo7TKrE&callback=initMap">
</script>
