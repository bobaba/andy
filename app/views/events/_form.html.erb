<%= form_for(event) do |f| %>
  <% if event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<div class="container resourceBG">
  <div class="eventDisplay">
    <div class="event-header">
      <div class="field">
        <h2><%= f.text_field :name, placeholder: "Name of Event", class: "textField" %></h2>
      </div>

      <div class="field">
        <div style="color:white;font-size:1.5em;">
        <%= f.text_field :location, placeholder: "Location of Event", class: "textField" %>
        </div>
      </div>
    </div>

  <div class="timeDesc">
    <br>
    <div class="field">
      <strong>Start Date &amp; Time</strong><br>
      <%= f.datetime_select :start_time, { ampm: true, order: [:month, :day, :year] }, { class: "form-control dateTimePicker" } %>
    </div>
    <br>
    <div class="field">
      <strong>End Date &amp; Time</strong><br>
      <%= f.datetime_select :end_time, { ampm: true, order: [:month, :day, :year] }, { class: "form-control dateTimePicker" } %>
    </div>

                <div class="field hidden">
                  <%= f.label :latitude %>
                  <%= f.text_field :latitude %>
                </div>

                <div class="field hidden">
                  <%= f.label :longitude %>
                  <%= f.text_field :longitude %>
                </div>
    <br>
    <div class="field">
      <strong>Description of Event</strong>
      <%= f.trix_editor :description %>
    </div>
    <div class="field">
      <strong>Street Address for Mapped Location of Event</strong><br>
      <%= f.text_field :address, class: "textField" %>
    </div>


    <br>
  <div class="actions" align="center">
    <%= f.submit "Save Event", class: "btn btn-lg btn-success" %>
  </div>

</div>
</div>


</div>
<% end %>
